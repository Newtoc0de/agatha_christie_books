<div class="container">
  <p style="color: green"><%= notice %></p>

  <h1>Books</h1>

  <div id="books">
    <% @books.each do |book| %>
      <%= render book %>
      <p>
        <%= link_to "Show this book", book, class: 'btn btn-gradient rounded-pill' %>
      </p>
    <% end %>
  </div>

  <%= link_to "New book", new_book_path %>
</div>
